#!/bin/bash

set -eu -o pipefail

if [ "$#" -eq 4 ] || [ "$#" -eq 5 ]; then
    PROFILE_NAME="$1"
    EC2_INSTANCE_ID="$2"
    EC2_PORT="$3"
    EC2_USER="$4"
    AWS_REGION_TMP="${5:-}"
elif [ "$#" -eq 3 ]; then
    PROFILE_NAME_AND_HOST_AND_REGION="$1" # ex: aws_randd_gateway / aws_randd_gateway_ap-northeast-1
    PROFILE_NAME=$(echo "${PROFILE_NAME_AND_HOST_AND_REGION}" | cut -d'_' -f2)
    EC2_INSTANCE_ID=$(echo "${PROFILE_NAME_AND_HOST_AND_REGION}" | cut -d'_' -f3)
    AWS_REGION_TMP=$(echo "${PROFILE_NAME_AND_HOST_AND_REGION}" | cut -d'_' -f4)
    EC2_PORT="$2"
    EC2_USER="$3"
fi

SEND_SSH_KEY="${HOME}/.ssh/id_ed25519.pub"

CMD=""
if where awsume >/dev/null 2>&1; then
    CMD="awsume"
elif [ -x "${HOME}/.local/bin/awsume" ]; then
    CMD="${HOME}/.local/bin/awsume"
elif [ -x "/usr/local/bin/awsume" ]; then
    CMD="/usr/local/bin/awsume"
elif [ -x "/opt/homebrew/bin/awsume" ]; then
    CMD="/opt/homebrew/bin/awsume"
elif [ -x "${HOME}/.local/share/mise/installs/pipx-awsume/latest/bin/awsume" ]; then
    CMD="${HOME}/.local/share/mise/installs/pipx-awsume/latest/bin/awsume"
fi

if [ -z "${CMD}" ]; then
    echo "awsume not found"
    exit 1
fi

set +eu +o pipefail

. "${CMD}" "${PROFILE_NAME}"

if [ -n "${AWS_REGION_TMP}" ]; then
    export AWS_REGION="${AWS_REGION_TMP}"
fi

# check instance-id is valid
if echo -n "${EC2_INSTANCE_ID}" | grep "i-" >/dev/null 2>&1; then
    :
else
    # search instance-id with Name tag
    EC2_INSTANCE_ID=$(aws ec2 describe-instances \
        --filters "Name=tag:Name,Values=${EC2_INSTANCE_ID}" "Name=instance-state-name,Values=running" \
        --query "Reservations[].Instances[0].InstanceId" \
        --output text)
    if [ -z "${EC2_INSTANCE_ID}" ]; then
        echo "instance-id not found"
        exit 1
    fi
fi

aws ec2-instance-connect send-ssh-public-key \
    --instance-id "${EC2_INSTANCE_ID}" \
    --instance-os-user "${EC2_USER}" \
    --ssh-public-key "file://${SEND_SSH_KEY}"

exec aws ssm start-session \
    --target "${EC2_INSTANCE_ID}" \
    --document-name AWS-StartSSHSession \
    --parameters "portNumber=${EC2_PORT}"
